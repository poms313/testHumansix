{% extends 'home/home.html.twig' %} {% block title %}Connection{% endblock %} {% block content %} {% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="m-4 animate-text-color">
    <h1>Connexion</h1>
</div>

<form action="{{ path('home_login') }}" method="post">
    <div class="form-group">
        <label for="username">Nom d'utilisateur:</label>
        <br>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />
    </div>
    <div class="form-group">
        <label for="password">Mot de passe:</label>
        <br>
        <input type="password" id="password" name="_password" />
    </div>
    <input type="hidden" name="_target_path" value="/admin" />
    <div class="form-group">
        <button class="custom-btn" type="submit">Connexion</button>
    </div>
</form>

{% endblock %}