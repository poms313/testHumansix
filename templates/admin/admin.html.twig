{% extends 'base.html.twig' %} {% block title %}Administration{% endblock %} {% block body %}

<div id="admin" class="container-fluid">
    <div class="row">
        <!-- sidebar -->
        <div class="col-md-3 col-lg-2 px-0 position-fixed h-100 bg-white shadow-sm sidebar" id="sidebar">
            <button id="close-sidebar" type="button" class="close m-2 pull-right d-none" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            <h2 class="text-primary d-flex my-4 justify-content-center">Admin</h2>
            <div class="list-group rounded-0">
                <a href="{{path('admin')}}" class="list-group-item list-group-item-action active border-0 d-flex align-items-center">
                    <i class="bi bi-border-all"></i>
                    <span class="ml-2">Acceuil</span>
                </a>
                <a href="{{path('admin_orders')}}" class="list-group-item list-group-item-action border-0 align-items-center">
                    <i class="bi bi-card-checklist"></i>
                    <span class="ml-2">Commandes</span>
                </a>
                <a href="{{path('admin_products')}}" class="list-group-item list-group-item-action border-0 align-items-center">
                    <i class="bi bi-box"></i>
                    <span class="ml-2">Produits</span>
                </a>
                <a href="{{path('admin_customers')}}" class="list-group-item list-group-item-action border-0 align-items-center">
                    <i class="bi bi-person-lines-fill"></i>
                    <span class="ml-2">Utilisateurs</span>
                </a>
                <a href="{{path('admin_new_cart_item')}}" class="list-group-item list-group-item-action border-0 align-items-center">
                    <i class="bi bi-plus-circle-fill"></i>
                    <span class="ml-2">Nouvelle commande</span>
                </a>
            </div>
        </div>
        <!-- overlay to close sidebar on small screens -->
        <div class="w-100 vh-100 position-fixed overlay d-none" id="sidebar-overlay"></div>
        <div class="col-md-9 col-lg-10 ml-md-auto px-0">
            <!-- top nav -->
            <nav class="w-100 d-flex px-4 py-2 mb-4 shadow-sm">
                <!-- close sidebar -->
                <button class="btn py-0 d-lg-none" id="open-sidebar">
                    <i class="bi bi-list text-primary h3"></i>
                </button>
                <div class="dropdown ml-auto">
                    <button class="btn py-0 d-flex align-items-center" id="logout-dropdown" data-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person text-primary h4"></i>
                        <i class="bi bi-chevron-down ml-1 mb-2 small"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right border-0 shadow-sm" aria-labelledby="logout-dropdown">
                        <a class="dropdown-item" href="{{path('logout')}}">Déconnexion</a>
                    </div>
                </div>
            </nav>
            <!-- main content -->
            <main class="container-fluid">
                <section class="row">
                    <div class="col-md-6 col-lg-4">
                        <article class="p-4 rounded shadow-sm border-left mb-4">
                            <a href="{{path('admin_orders')}}" class="d-flex align-items-center">
                                <i class="bi bi-card-checklist h5"></i>
                                <h5 class="ml-2">Commandes</h5>
                            </a>
                        </article>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <article class="p-4 rounded shadow-sm border-left mb-4">
                            <a href="{{path('admin_products')}}" class="d-flex align-items-center">
                                <i class="bi bi-box h5"></i>
                                <h5 class="ml-2">Produits</h5>
                            </a>
                        </article>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <article class="p-4 rounded shadow-sm border-left mb-4">
                            <a href="{{path('admin_customers')}}" class="d-flex align-items-center">
                                <i class="bi bi-person-lines-fill h5"></i>
                                <h5 class="ml-2">Utilisateurs</h5>
                            </a>
                        </article>
                    </div>

                </section>

                <div class="jumbotron jumbotron-fluid rounded bg-white border-0 shadow-sm border-left px-4">
                    <div class="container text-center">
                        {% block content %}{% endblock %}
                        <div class="rounded border m-2 p-2 justify-content-center">
                            <p><a class="btn btn-primary" href="{{path('logout')}}">Déconnexion</a></p>
                            <p><a class="btn btn-primary" href="{{path('home')}}">Retour à l'acceuil du projet</a></p>
                        </div>

                    </div>
            </main>
            </div>
        </div>
    </div>





































    {% endblock %}